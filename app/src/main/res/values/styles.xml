<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_menu_button">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/jura</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">.12</item>

        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:background">#D9D9D9</item>
        <item name="backgroundTint">#D9D9D9</item>

        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="main_menu_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>

        <item name="android:textSize">65sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/secret_power</item>
        <item name="android:letterSpacing">.12</item>

        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="menu_page_banner">
        <item name="android:fontFamily">@font/jura</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:background">@color/ice_acidblue_washed</item>
        <item name="android:gravity">center</item>

        <item name="android:paddingTop">@dimen/ssm_banner_padding</item>
        <item name="android:paddingBottom">@dimen/ssm_banner_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="submenu_label">
        <item name="android:fontFamily">@font/jura</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/ice_blue</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="submenu_switch">
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="submenu_button">
        <item name="android:fontFamily">@font/jura</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/ice_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="submenu_slider">
        <item name="android:thumb">@drawable/ic_seekbar_square</item>
        <item name="android:thumbTint">@color/ice_blue</item>

        <item name="android:progressDrawable">@drawable/ic_seekbar</item>
        <item name="android:progressBackgroundTint">@color/shaded_ice_blue</item>
        <item name="android:progressTint">@color/ice_blue</item>

        <item name="android:progressTintMode">src_over</item>
    </style>

    <style name="textview_box">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/shaded_ice_blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/border</item>
    </style>



</resources>