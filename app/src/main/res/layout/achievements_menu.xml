<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/the_iceberg_splash_distant_vert">

    <TextView
        android:id="@+id/ssm_banner"
        style="@style/menu_page_banner"
        android:text="@string/ssm_achievements_label"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:layout_marginTop="6pt"

        android:columnCount="2"
        android:rowCount="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssm_banner">

        <TextView
            android:text="@string/complete_game"
            style="@style/textview_box"
            />
        <TextView
            android:text="@string/the_good_ending"
            style="@style/textview_box"/>

        <TextView
            android:text="@string/the_bad_ending"
            style="@style/textview_box"/>

        <TextView
            android:text="@string/the_true_ending"
            style="@style/textview_box"/>
        <TextView
            android:text="@string/collector"
            style="@style/textview_box"/>
        <TextView
            android:text="Sky Color"
            style="@style/textview_box"/>
        <TextView
            android:text="Nerd!!!"
            style="@style/textview_box"/>
        <TextView
            android:text="I am Frog"
            style="@style/textview_box"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>